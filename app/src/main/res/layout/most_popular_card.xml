<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:layout_marginRight="10sp"
    android:layout_gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/popularImage"
        android:background="@drawable/buy_button_background"
        android:scaleType="center"
        android:layout_width="@dimen/small_image_view"
        android:layout_height="@dimen/small_image_view"/>
    <TextView
        android:id="@+id/popularName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularImage"
        style="@style/TitleRegular"
        android:textAlignment="center"
        android:text="Pasta"/>

</RelativeLayout>